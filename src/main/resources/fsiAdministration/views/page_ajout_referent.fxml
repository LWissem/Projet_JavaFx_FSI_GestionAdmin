<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="500.0"
      xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fsiAdministration.controllers.AjouterReferentController"
      stylesheets="@../styles/style.css"
      style="-fx-background-color: white;">

    <children>
        <VBox layoutX="20" layoutY="20" prefWidth="460" spacing="20"
              style="-fx-background-color: #f9f9f9; -fx-padding: 30; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <Label text="AJOUT D'UN NOUVEAU RÉFÉRENT" textFill="#024010" alignment="CENTER"
                   style="-fx-font-weight: bold; -fx-font-size: 22px; -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;" />

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Nom :" textFill="#024010" style="-fx-font-weight: bold; -fx-font-size: 16px;" prefWidth="120"/>
                <TextField fx:id="tfNomRef" promptText="Entrez le nom" prefWidth="300" style="-fx-font-size: 14px;" />
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Prénom :" textFill="#024010" style="-fx-font-weight: bold; -fx-font-size: 16px;" prefWidth="120"/>
                <TextField fx:id="tfPrenomRef" promptText="Entrez le prénom" prefWidth="300" style="-fx-font-size: 14px;" />
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Email :" textFill="#024010" style="-fx-font-weight: bold; -fx-font-size: 16px;" prefWidth="120"/>
                <TextField fx:id="tfEmailRef" promptText="Entrez l'email" prefWidth="300" style="-fx-font-size: 14px;" />
            </HBox>

            <HBox spacing="25" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="bEnregistrer" text="ENREGISTRER" onAction="#bEnregistrerClick"
                        style="-fx-background-color: #024010; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5;"
                        prefWidth="150" prefHeight="40" />
                <Button fx:id="bEffacer" text="EFFACER" onAction="#bEffacerClick"
                        style="-fx-background-color: #024010; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5;"
                        prefWidth="150" prefHeight="40" />
                <Button fx:id="bRetour" text="RETOUR" onAction="#bRetourClick"
                        style="-fx-background-color: #024010; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5;"
                        prefWidth="150" prefHeight="40" />
            </HBox>
        </VBox>
    </children>
</Pane>
